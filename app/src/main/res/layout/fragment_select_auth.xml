<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/introGif"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="h,3:2"
        app:loopCount="1000"
        android:src="@drawable/intro" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/introImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/introGif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp"
        app:srcCompat="@drawable/do_what_you_love" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectLoginBtn"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/introImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cornerRadius="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/md_white_1000"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:text="log in"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectSignupBtn"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/selectLoginBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cornerRadius="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/md_white_1000"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:text="sign up"/>

</androidx.constraintlayout.widget.ConstraintLayout>